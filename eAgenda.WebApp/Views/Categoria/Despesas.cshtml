@model DespesasCategoriaViewModel

@{
    ViewBag.Titulo = "Despesas da Categoria";
}

<div class="d-flex justify-content-center">
    <div class="col-sm-8 col-lg-6">
        <div class="border rounded-4 gap-2 p-2" style="background-color:white">
            <form class="container-fluid mt-3" asp-action="Despesas" method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold" asp-for="Titulo">Categoria:</label>
                    <input class="form-control" asp-for="Titulo" id="Titulo" type="text" value="@Model.Titulo" disabled />
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Descrição da Despesa</th>
                            <th>Data</th>
                            <th>Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DetalhesDespesaViewModel d in Model.Despesas)
                        {
                            <tr>
                                <td>@d.Descricao</td>
                                <td>@d.DataOcorrencia.ToShortDateString()</td>
                                <td>@d.Valor.ToString("C2")</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="mb-3">
                    <p class="form-label fw-bold">Valor Total:</p>
                    <h3>@Model.ValorTotal.ToString("C2")</h3>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a class="btn btnVoltar" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>