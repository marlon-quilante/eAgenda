@model ExcluirContatoViewModel

@{
    ViewBag.Titulo = "Exclusão de Contato";
}

<div class="d-flex justify-content-center">
    <form asp-action="ExclusaoConfirmada" asp-route-idParaExcluir="@Model.Id" method="post">
        <h3 class="mb-3">Deseja realmente excluir o contato <strong>@Model.Nome</strong>?</h3>
        <div class="d-flex justify-content-end gap-2">
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            <button class="btn btn-danger" type="submit">Excluir</button>
        </div>
    </form>
</div>