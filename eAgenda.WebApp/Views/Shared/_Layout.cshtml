@{
    var contatosSelecionado = ViewContext.HttpContext.Request.Path.StartsWithSegments("/Contatos") ? "btn btnMenuSelecionado px-3" : "nav-link btnMenu fw-semibold";
    var compromissosSelecionado = ViewContext.HttpContext.Request.Path.StartsWithSegments("/Compromissos") ? "btn btnMenuSelecionado px-3" : "nav-link btnMenu fw-semibold";
    var categoriasSelecionado = ViewContext.HttpContext.Request.Path.StartsWithSegments("/Categorias") ? "btn btnMenuSelecionado px-3" : "nav-link btnMenu fw-semibold";
    var despesasSelecionado = ViewContext.HttpContext.Request.Path.StartsWithSegments("/Despesas") ? "btn btnMenuSelecionado px-3" : "nav-link btnMenu fw-semibold";
    var tarefasSelecionado = ViewContext.HttpContext.Request.Path.StartsWithSegments("/Tarefas") ? "btn btnMenuSelecionado px-3" : "nav-link btnMenu fw-semibold";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Titulo - eAgenda</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
            <div class="container">
                <a class="navbar-brand fs-4 fw-bold" href="/">e-Agenda</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-center" id="navbarNav">
                    <ul class="navbar-nav gap-2">
                        <li class="nav-item">
                            <a class="@contatosSelecionado" href="/Contatos">Contatos</a>
                        </li>
                        <li class="nav-item">
                            <a class="@compromissosSelecionado" href="/Compromissos">Compromissos</a>
                        </li>
                        <li class="nav-item">
                            <a class="@categoriasSelecionado" href="/Categorias">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="@despesasSelecionado" href="/Despesas">Despesas</a>
                        </li>
                        <li class="nav-item">
                            <a class="@tarefasSelecionado" href="/Tarefas">Tarefas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="mb-3 border-bottom">
            <h3 class="mt-2 mb-2">@ViewBag.Titulo</h3>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Marlon Quilante
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
