@using eAgenda.Dominio.ModuloTarefa
@model DetalhesItensTarefaViewModel

@{
    ViewBag.Titulo = "Itens da Tarefa";
}

<div class="d-flex justify-content-center">
    <div class="col-sm-8 col-lg-6">
        <div class="border rounded-4 gap-2 p-2" style="background-color:white">
            <div class="container-fluid mt-3">
                <label class="form-label fw-bold" asp-for="TituloTarefa">Tarefa:</label>
                <input class="form-control" asp-for="TituloTarefa" id="TituloTarefa" type="text" value="@Model.TituloTarefa" disabled />
                <span asp-validation-for="TituloTarefa" class="text-danger"></span>
            </div>

            <form class="container-fluid mt-3" asp-action="AdicionarItemTarefa" asp-route-idTarefa="@Model.TarefaId" method="post">
                <div class="mb-2">
                    <label class="form-label fw-bold" asp-for="TituloItem">Título do Item:</label>
                    <input class="form-control" asp-for="TituloItem" id="TituloItem" type="text" placeholder="Título do item" value="" />
                    <span asp-validation-for="TituloItem" class="text-danger"></span>
                </div>

                @if (Model.StatusConclusaoTarefa == false)
                {
                    <div class="d-flex justify-content-end gap-2">
                        <button class="btn btnTema" type="submit">Adicionar</button>
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-end gap-2">
                        <button class="btn btnTema disabled" type="submit">Adicionar</button>
                    </div>
                }
            </form>

            <div class="container-fluid mt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Status de Conclusão</th>
                            <th>Concluir</th>
                            <th>Excluir</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ItemTarefa i in Model.ItensTarefa)
                        {
                            <tr>
                                <td>@i.Titulo</td>
                                <td>@(i.StatusConclusao == false ? "Pendente" : "Concluído")</td>
                                <td>
                                    @if (i.StatusConclusao == false)
                                    {
                                        <form class="d-flex justify-content-center align-items-center"
                                              asp-action="ConcluirItemTarefa"
                                              asp-route-idTarefa="@i.Tarefa.Id"
                                              asp-route-idItem="@i.Id" method="post">
                                            <button class="d-flex btn btn-success rounded-circle align-items-center justify-content-center"
                                                    type="submit"
                                                    style="height: 35px; width: 35px" title="Concluir">
                                                <i class="bi bi-check2"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="bi bi-check2-all" style="font-size: 20px"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if(i.Tarefa.StatusConclusao == false)
                                    {
                                        <form class="d-flex justify-content-center align-items-center"
                                              asp-action="RemoverItemTarefa"
                                              asp-route-idTarefa="@i.Tarefa.Id"
                                              asp-route-idItem="@i.Id" method="post">
                                            <button class="d-flex btn btn-danger rounded-circle align-items-center justify-content-center"
                                                    type="submit"
                                                    style="height: 35px; width: 35px" title="Remover">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <div class="btn btn-danger rounded-circle me-2 d-flex justify-content-center align-items-center disabled" style="height: 35px; width: 35px">
                                            <i class="bi bi-trash"></i>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-flex justify-content-start gap-2">
                    <p>Percentual de conclusão da tarefa: <strong>@Model.PercentualConclusaoTarefa.ToString("F2") %</strong></p>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a class="btn btnVoltar" asp-action="Index">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>